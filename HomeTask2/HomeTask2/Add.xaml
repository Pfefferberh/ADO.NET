<Window x:Class="HomeTask2.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeTask2"
        mc:Ignorable="d"
        Title="Add" Height="450" Width="300">
    <Grid>
        <StackPanel>
            <TextBox x:Name="tbName" Margin="40" ></TextBox>
            <TextBox x:Name="tbSurname" Margin="40"></TextBox>
            <ComboBox x:Name="cbGroup" Margin="40" SelectedIndex="0" ></ComboBox>
            <Button  Margin="60" Click="Button_Click">save</Button>
        </StackPanel>
    </Grid>
</Window>
