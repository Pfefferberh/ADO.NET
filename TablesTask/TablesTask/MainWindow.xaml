<Window x:Class="TablesTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TablesTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl x:Name="tbContr">
        <!--<TabItem >
                <DataGrid></DataGrid>
        </TabItem>-->
        </TabControl>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="1">
            <Button Margin="30 10 20 10" Width="100" Click="btnDelete_Click">Delete</Button>
            <Button Margin="30 10 20 10" Width="100" Click="btnSaveXML_Click">Save</Button>
        </StackPanel>
    </Grid>
</Window>
